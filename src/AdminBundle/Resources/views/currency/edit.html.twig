{% extends '@Admin/layout.html.twig' %}

{% block title %}{% trans %}Edit Currency Rate{% endtrans %}{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-12">
            <div>
                <h2>{% trans %}Edit Currency Rate{% endtrans %}</h2>
            </div>
            <div>
                {{ form_start(form) }}
                <div class="form-group col-md-12">
                    <label for="ourCurrency">{% trans %}Our Currency Rate{% endtrans %}</label>
                    {{ form_widget(form.ourCurrency) }}
                </div>
                <div class="form-group col-md-12">
                    <input class="btn btn-primary" type="submit" value="{% trans %}Save{% endtrans %}" />
                    <a href="{{ path('admin_currency_index') }}" type="button" class="btn btn-primary">{% trans %}Cancel{% endtrans %}</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}