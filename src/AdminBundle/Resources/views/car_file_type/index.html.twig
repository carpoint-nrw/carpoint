{% extends '@Admin/layout.html.twig' %}

{% block title %}Car file type{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-title">
                <a href="{{ path('admin_carfiletype_new') }}" class="btn btn-primary" type="button">{% trans %}Add new car file type{% endtrans %}</a>
            </div>
            <div class="preferences">
                <table id="datatable-car-file-type" class="table image-table table-bordered table-striped table-condensed table-hover">
                    <thead>
                    <tr>
                        <th>{% trans %}Edit{% endtrans %}</th>
                        <th>{% trans %}Delete{% endtrans %}</th>
                        <th>{% trans %}Type{% endtrans %}</th>
                    </tr>
                    </thead>
                </table>
            </div>
            {% set name = 'Do you want to delete this file type?' %}
            {%- include '@Admin/partial/modal/modal_for_delete_item.html.twig' with {'type': name} -%}
        </div>
    </div>
{% endblock %}

{% block admin_stylesheets %}
    <link href="{{ asset('css/datatables.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/admin/css/datatable.css') }}" rel="stylesheet">
{% endblock %}
{% block admin_javascripts %}
    <script type="text/javascript">
        window.ajaxData    = '{{ path('admin_carfiletype_ajaxdata') }}';
        window.editRoute   = '{{ path('admin_carfiletype_edit') }}';
        window.deleteRoute = '{{ path('admin_carfiletype_delete') }}';
        window.userLocale  = '{{ app.user.locale }}';
    </script>
    <script src="{{ asset('js/datatables.min.js') }}"></script>
    <script src="{{ asset('bundles/admin/js/car_file_type/car_file_type.js') }} " type="module"></script>
{% endblock %}