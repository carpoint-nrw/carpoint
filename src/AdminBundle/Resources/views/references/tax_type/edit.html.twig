{% extends '@Admin/layout.html.twig' %}

{% block title %}{{ type|trans  ~ ' ' ~ entity|capitalize|trans }}{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-12">
            <div>
                <h2>{{ type|trans  ~ ' ' ~ entity|capitalize|trans }}</h2>
            </div>
            <div>
                {{ form_start(form) }}
                <div class="form-group col-md-12">
                    <label for="title">{{ entity|capitalize|trans }}</label>
                    {{ form_widget(form.title) }}
                </div>

                <div class="form-group col-md-12">
                    <label for="description">{% trans %}Description{% endtrans %}</label>
                    {{ form_widget(form.description) }}
                </div>
                <div class="form-group col-md-12">
                    <label for="tax">{% trans %}Tax{% endtrans %}</label>
                    {{ form_widget(form.tax) }}
                </div>
                <div class="form-group col-md-12">
                    <label for="withOutTaxText">{% trans %}With Out Tax Text{% endtrans %}</label>
                    {{ form_widget(form.withOutTaxText) }}
                </div>
                <div class="form-group col-md-12">
                    <label for="taxValueText">{% trans %}Tax Value Text{% endtrans %}</label>
                    {{ form_widget(form.taxValueText) }}
                </div>
                <div class="form-group col-md-12">
                    <label for="fullPriceText">{% trans %}Full Price Text{% endtrans %}</label>
                    {{ form_widget(form.fullPriceText) }}
                </div>
                <div class="form-group col-md-12">
                    <input class="btn btn-primary" type="submit" value="{% trans %}Edit{% endtrans %}" />
                    <a href="{{ path(indexRoute) }}" type="button" class="btn btn-primary">{% trans %}Cancel{% endtrans %}</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}