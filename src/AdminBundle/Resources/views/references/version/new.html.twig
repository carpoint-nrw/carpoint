{% extends '@Admin/layout.html.twig' %}

{% block title %}{{ type|trans  ~ ' ' ~ entity|capitalize|trans }}{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-12">
            <div>
                <h2>{{ type|trans  ~ ' ' ~ entity|capitalize|trans }}</h2>
            </div>
            <div>
                {{ form_start(form) }}
                <div class="form-group col-md-12">
                    <label for="brand">{% trans %}Brand{% endtrans %}</label>
                    {{ form_widget(form.brand) }}
                </div>
                <div class="form-group col-md-12">
                    <label for="model">{% trans %}Model{% endtrans %}</label>
                    {{ form_widget(form.model) }}
                </div>
                <div class="form-group col-md-12">
                    <label for="polish">{% trans %}Version Polish{% endtrans %}</label>
                    {{ form_widget(form.polish) }}
                </div>
                <div class="form-group col-md-12">
                    <label for="german">{% trans %}Version German{% endtrans %}</label>
                    {{ form_widget(form.german) }}
                </div>
                <div class="form-group col-md-12">
                    <label for="german">{% trans %}Sorting{% endtrans %}</label>
                    {{ form_widget(form.sort) }}
                </div>
                <div class="form-group col-md-12">
                    {{ form_widget(form.isVisible) }}
                </div>
                <div class="form-group col-md-12">
                    <input class="btn btn-primary" type="submit" value="{% trans %}Create{% endtrans %}" />
                    <a href="{{ path(indexRoute) }}" type="button" class="btn btn-primary">{% trans %}Cancel{% endtrans %}</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block admin_javascripts %}
    <script type="text/javascript">
			window.ajaxGetModel = '{{ path('admin_ajax_ajax_getmodel') }}';
			window.formType = 'new';
    </script>
    <script src="{{ asset('bundles/admin/js/references/version.js') }} " type="module"></script>
{% endblock %}